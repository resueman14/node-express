<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Login</a></li>
        <li class="tab col s6"><a  href="#registration">Registration</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
        <h4>Login</h4>
        <form action='/auth/login' method="POST">
        <div class="row auth">
            <div class="input-field">
                <input placeholder="enter login" name ='name' id="name" type="text" class="validate" required>
                <label for="name">Login</label>
                <span class="helper-text" data-error="Введите логин"></span>
            </div>
            <div class="input-field">
                <input placeholder="example@email.com" name ='email' id="email" type="text" class="validate" required>
                <label for="email">E-mail</label>
                <span class="helper-text" data-error="Введите email"></span>
            </div>
            <div class="input-field">
                <input placeholder="qwerty:)" name='password' id="password" type="password" class="validate" >
                <label for="password">Password</label>
                <span class="helper-text" data-error="Введите пароль"></span>
            </div>
        </div>
            <input type="hidden" name="_csrf" value="{{@root.csrf}}">
            <button class="btn btn-primary" type="submit">log in</button>
        </form>

    </div>
    <div id="registration" class="col s6 offset-s3">
        <h4>Register</h4>
        <form action='/auth/register' method="POST">
        <div class="row auth">
            <div class="input-field">
                <input placeholder="enter login" name ='name' id="name" type="text" class="validate" required>
                <label for="name">Login</label>
                <span class="helper-text" data-error="Введите логин"></span>
            </div>
            <div class="input-field">
                <input placeholder="example@email.com" name ='email' id="email" type="text" class="validate" required>
                <label for="email">E-mail</label>
                <span class="helper-text" data-error="Введите email"></span>
            </div>
            <div class="input-field">
                <input placeholder="qwerty:)" name='password' id="password" type="password" class="validate" >
                <label for="password">Password</label>
                <span class="helper-text" data-error="Введите пароль"></span>
            </div>
            <div class="input-field">
                <input placeholder="qwerty:)" name='confirm' id="confirm" type="password" class="validate" >
                <label for="confirm">Password</label>
                <span class="helper-text" data-error="Введите пароль еще раз"></span>
            </div>
        </div>
            <input type="hidden" name="_csrf" value="{{@root.csrf}}">
            <button class="btn btn-primary" type="submit">register</button>
        </form>
        
    </div>

  </div>
</div>