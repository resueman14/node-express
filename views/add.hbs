<h2>Добавить новый элемент</h2>
<form action='/add' method="POST">
    <div class="row">
        <div class="input-field col s6">
            <input placeholder="Input item name" name ='name' id="name" type="text" class="validate" required>
            <label for="name">Item name</label>
            <span class="helper-text" data-error="Введите название"></span>
        </div>
        <div class="input-field col s6">
            <input placeholder="Input item price" name='price' id="price" type="number" class="validate" required min="100">
            <label for="price">Item price</label>
            <span class="helper-text" data-error="Введите цену"></span>
        </div>
    </div>
    <div class="input-field" style="padding: 0.4rem;">
        <input placeholder="Input item url" name='url' id="item_img_url" type="text" class="validate" required>
        <label for="item_img_url">Item image url</label>
        <span class="helper-text" data-error="Введите URL"></span>
    </div>
    <button class="btn btn-primary">Добавить объект</button>
</form>