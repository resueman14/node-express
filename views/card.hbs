<h1>Korzina</h1>
<div id="card">
{{#if items.length}}
<table>
    <thead>
        <tr>
            <th>Название</th>
            <th>Количество</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        {{#each items}}
        <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>
                <button class="btn btn-small js-remove" data-id="{{_id}}">Ygalimb</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<p><strong>Цена:</strong> <span class="price"> {{price}} </span></p>
{{else}}
    <p>Kopzina nycma</p>
{{/if}}
</div>