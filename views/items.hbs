<h1>Продукты</h1>

{{#if items.length }}
{{#each items}}
<div class="row">
  <div class="col s6 offset-s3">
    <div class="card">
      <div class="card-image">
        <img src="{{img}}" alt="{{title}}">
      </div>
      <div class="card-content">
        <span class="card-title">{{title}}</span>
        <p class="price">{{price}}</p>
      </div>
      <div class="card-action">
        <a href="/items/{{id}}" target="_blank">Открыть курс</a>
        <a href="/items/{{id}}/edit?allow=true">Редактировать</a>
      </div>
    </div>
  </div>
</div>
{{/each}}
{{else}}
<p>There aren't any item here</p>
{{/if}}